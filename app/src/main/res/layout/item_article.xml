<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_article"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_card_article"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/iv_article_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:src="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_article_type"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:background="@drawable/backgroud_article_tag"
            android:text="article_type"
            android:textColor="@color/white"
            android:fontFamily="@font/opensans_regular"
            app:layout_constraintTop_toBottomOf="@id/iv_article_thumbnail"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="article_title"
            android:textSize="21dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_bold"
            app:layout_constraintTop_toBottomOf="@id/tv_article_type"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tv_article_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="article_description"
            android:textSize="17dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_article_title"
            app:layout_constraintLeft_toLeftOf="@id/tv_article_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>